{
  "name": "secure-multimedia-storage",
  "version": "1.0.0",
  "description": "Secure file sharing system for private family use",
  "main": "index.js",
  "scripts": {
    "dev": "vite",
    "dev:full": "./start-dev.sh",
    "dev:windows": "start-dev.bat",
    "build": "vite build",
    "preview": "vite preview",
    "setup:aws": "node scripts/setup-aws.js",
    "deploy:frontend": "npm run build && netlify deploy --prod",
    "deploy:backend": "cd src/backend && serverless deploy",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:coverage": "vitest run --coverage",
    "test:security": "npm run test:security:scan && npm run test:security:penetration",
    "test:security:scan": "zap-baseline.py -t http://localhost:3000",
    "test:security:penetration": "npm run test:security:custom",
    "test:security:custom": "node tests/security/penetration.js",
    "test:performance": "artillery run tests/performance/load-test.yml",
    "test:infrastructure": "node tests/infrastructure/validate-aws.js",
    "test:backend": "cd src/backend && pytest",
    "test:backend:coverage": "cd src/backend && pytest --cov=. --cov-report=html"
  },
  "keywords": ["file-sharing", "security", "aws", "family"],
  "author": "Family Development Team",
  "license": "MIT",
  "devDependencies": {
    "vite": "^5.0.0",
    "tailwindcss": "^3.3.0",
    "autoprefixer": "^10.4.0",
    "postcss": "^8.4.0",
    "vitest": "^1.0.0",
    "jsdom": "^23.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "playwright": "^1.40.0",
    "artillery": "^2.0.0"
  },
  "dependencies": {
    "aws-sdk": "^2.1500.0"
  }
} 